FROM golang:1.23.4-alpine AS pre-build
WORKDIR /usr/src/app
COPY go.mod go.sum ./
RUN go mod download && go mod verify
COPY . .
RUN go build -v -o /usr/build/app ./...
WORKDIR /usr/build/
COPY ./db-init.sql .

FROM alpine AS build
WORKDIR /usr/bin/
COPY --from=pre-build /usr/build/ /usr/bin/
ENTRYPOINT ["app"]
